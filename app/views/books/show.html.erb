
<div class="body">
	<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
  <div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile' %>

		<h2>New book</h2>
		<%= render 'books/newform' %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<td><!-- ここから -->
						<% if @book.favorited_by?(current_user) %>
							<%= link_to book_favorite_path(@book), method: :delete do %>
							<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
							<%= @book.favorites.count %>
							<% end %>
						<% else %>
							<%= link_to book_favorites_path(@book), method: :post do %>
							<%= @book.favorites.count %>いいね
							<% end %>
						<% end %>
						<!-- ここまで -->
					</td>
					<td>コメント数：<%= @book.book_comments.count %></td>
					<% if @book.user_id == current_user.id %>
					<td><%= link_to "Edit",edit_book_path(@book.id), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>
			<%= form_for [@book, @book_comment] do |f| %>
					<%= f.text_area :comment %>
					<%= f.submit %>
				<% end %>

				<table class="table">
					<% @book_comments.each do |book_comment| %>
						<tr>
							<td>
								<%= book_comment.comment %>
							<td>

							<td>
								<% if book_comment.user_id == current_user.id %>
									<%= link_to "delete", book_book_comments_path(@book, book_comment), method: :delete %>
								<% end %>
							</td>
						</tr>
					<% end %>
				</table>

	</div>
</div>
</div>
</div>
